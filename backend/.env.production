# Production Environment Variables

# Application
PROJECT_NAME=E-Commerce Recommendation System Kenya
ENVIRONMENT=production
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# Database (MongoDB Atlas)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/ecommerce_kenya?retryWrites=true&w=majority
MONGODB_DB_NAME=ecommerce_kenya

# Redis (Redis Cloud)
REDIS_URL=redis://default:password@redis-server.cloud.redislabs.com:12345
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# M-Pesa Production Credentials
MPESA_ENVIRONMENT=production
MPESA_CONSUMER_KEY=your_production_consumer_key
MPESA_CONSUMER_SECRET=your_production_consumer_secret
MPESA_SHORTCODE=your_production_shortcode
MPESA_PASSKEY=your_production_passkey
MPESA_CALLBACK_URL=https://your-backend-url.onrender.com/api/v1/mpesa/callback

# CORS Origins
BACKEND_CORS_ORIGINS=["https://your-site.vercel.app","https://www.your-domain.com"]

# Optional
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
