# Environment Configuration
ENVIRONMENT=development

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=E-Commerce Recommendation System Kenya

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ecommerce_kenya

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# M-Pesa Configuration (Safaricom Daraja API)
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=174379
MPESA_PASSKEY=
MPESA_CALLBACK_URL=http://localhost:8000/api/v1/mpesa/callback

# ML Model Configuration
MIN_RECOMMENDATIONS=5
MAX_RECOMMENDATIONS=20
MODEL_RETRAIN_INTERVAL=86400
MIN_RATINGS_FOR_RECOMMENDATION=3
KNN_NEIGHBORS=20
SVD_FACTORS=50

# Feature Flags
ENABLE_KAFKA=false
ENABLE_AB_TESTING=true
ENABLE_REGIONAL_FEATURES=true
ENABLE_OFFLINE_MODE=true

# Cache Configuration
CACHE_TTL=3600
TRENDING_ITEMS_CACHE_TTL=300

# Supported Languages
SUPPORTED_LANGUAGES=en,sw
DEFAULT_LANGUAGE=en

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
ENABLE_CUSTOM_ANALYTICS=true

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080
